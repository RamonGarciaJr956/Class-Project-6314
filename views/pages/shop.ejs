<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>

<body class="bg-gray-50">

  <%- include('../partials/navbar') %>

  <section class=py-32 min-h-screen">
    <div class="container mx-auto px-6">
      <div class="flex flex-col lg:flex-row gap-8">

        <%- include('../partials/sidebar') %>

        <div class="lg:w-3/4">

          <div class="flex justify-between items-center mb-6">
            <p class="text-gray-600">Showing <%= products.length %> products</p>
            <select class="border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-purple-600 focus:border-transparent">
              <option>Most Popular</option>
              <option>Price: Low to High</option>
              <option>Price: High to Low</option>
              <option>Newest First</option>
            </select>
          </div>

          <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">

            <% products.forEach(function(product) { %>
                <%- include('../partials/product_card', { product: product }) %>
            <% }) %>

          </div>
        </div>
      </div>
    </div>
  </section>

  <script>
    lucide.createIcons();
  </script>
</body>

<%- include('../partials/footer') %>

</html>