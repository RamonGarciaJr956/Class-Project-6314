    <script>
      function showMobileMenu() {
        document.getElementById('mobile-menu').classList.toggle('hidden');
      }

      function navSearch(event) {
        function productTemplate(name, description, price, image, url) {
          return `
            <a href="${url}"" class="flex items-center space-x-4 py-3 hover:bg-white/5 transition-colors duration-200 group">
              <img src="${image}"" class="w-16 h-16 object-cover rounded-md" />
              <div class="flex-1">
                <p class="text-sm font-semibold text-white group-hover:text-purple-300 transition-colors">${name}</p>
                <p class="text-xs text-gray-400">${description}</p>
                <p class="text-sm font-bold text-purple-400">$${price}</p>
              </div>
              <i class="w-5 h-5 text-gray-400 group-hover:text-white transition-colors" data-lucide="arrow-right"></i>
            </a>
          `;
        }

        if (event.target.value.length == 0) {
          event.target.nextElementSibling.classList.add('invisible', 'opacity-0');
          event.target.nextElementSibling.classList.remove('visible', 'opacity-100');
          return;
        }

        const search = event.target.value;
        fetch('/api/search?query=' + search)
          .then(response => response.json())
          .then(data => {
            const searchResults = document.getElementsByClassName('item-list');
            const visibleSearchResults = Array.from(searchResults).filter(itemList => {
              const parentDiv = itemList.closest('.relative');
              return parentDiv &&
                !parentDiv.classList.contains('hidden') &&
                parentDiv.offsetParent !== null;
            });
            visibleSearchResults[0].innerHTML = '';

            if (event.target.value.length != 0) {
              event.target.nextElementSibling.classList.remove('invisible', 'opacity-0');
              event.target.nextElementSibling.classList.add('opacity-100', 'visible');

              data.products.forEach(product => {
                visibleSearchResults[0].innerHTML += productTemplate(product.name, product.description, product.price, product.image, "/product/" + product.id);
              });
            }
          });
      }

      function updateCartCounter() {
        const cart = localStorage.getItem('cart') ? JSON.parse(localStorage.getItem('cart')) : [];
        const cartElementNav = document.getElementById('cart');

        if (!cartElementNav) {
          return;
        }

        const existingCounter = cartElementNav.querySelector('span');
        if (existingCounter) {
          existingCounter.remove();
        }

        if (cart.length > 0) {
          cartElementNav.innerHTML += `<span class="min-h-4 top-0 right-0 transform translate-x-1/2 -translate-y-1/2 absolute bg-red-500 aspect-square rounded-full text-xs flex justify-center items-center">${cart.length}</span>`;
        }
      }

      updateCartCounter();
    </script>
